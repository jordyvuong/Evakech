<style>
  .trust {
    min-height: 100vh;
    padding: 120px 0;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.9) 0%, rgba(248, 245, 240, 0.7) 100%);
    position: relative;
    display: flex;
    align-items: center;
  }

  .trust-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
  }

  .trust-text h2 {
    font-size: clamp(40px, 5vw, 64px);
    margin-bottom: 30px;
    font-weight: 300;
    line-height: 1.1;
    color: #0D0D0D;
  }

  .trust-text h2 span {
    color: var(--gold);
    font-weight: 500;
  }

  .trust-text p {
    color: rgba(13, 13, 13, 0.7);
    font-size: 18px;
    line-height: 1.8;
    margin-bottom: 40px;
  }

  .trust-features {
    display: grid;
    gap: 30px;
  }

  .trust-feature {
    display: flex;
    gap: 20px;
    align-items: start;
  }

  .trust-feature-icon {
    width: 50px;
    height: 50px;
    background: rgba(207, 174, 112, 0.15);
    border: 1px solid var(--gold);
    border-radius: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24px;
    flex-shrink: 0;
  }

  .trust-feature-text h4 {
    font-size: 20px;
    margin-bottom: 8px;
    color: #0D0D0D;
  }

  .trust-feature-text p {
    color: rgba(13, 13, 13, 0.6);
    font-size: 16px;
    line-height: 1.5;
  }

  .trust-visual {
    position: relative;
  }

  .trust-cards {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    transform: rotate(-5deg);
  }

  .trust-card {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(207, 174, 112, 0.3);
    border-radius: 20px;
    padding: 30px;
    text-align: center;
    transition: all 0.3s ease;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
  }

  .trust-card:nth-child(1) { transform: translate(-20px, 20px); }
  .trust-card:nth-child(2) { transform: translate(20px, -20px); }
  .trust-card:nth-child(3) { transform: translate(-20px, -20px); }
  .trust-card:nth-child(4) { transform: translate(20px, 20px); }

  .trust-card:hover {
    transform: scale(1.05) rotate(5deg);
    border-color: var(--gold);
    box-shadow: 0 15px 40px rgba(207, 174, 112, 0.2);
  }

  .trust-card-icon {
    font-size: 36px;
    margin-bottom: 15px;
  }

  .trust-card-title {
    font-size: 18px;
    color: #0D0D0D;
    margin-bottom: 10px;
  }

  .trust-card-value {
    font-size: 24px;
    color: var(--gold);
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .trust-content {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .trust-cards {
      transform: none;
    }
  }
</style>